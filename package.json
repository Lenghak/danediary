{
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@tailwindcss/cli": "4.0.0-beta.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "rimraf": "^6.0.1",
    "syncpack": "^13.0.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  },
  "engineStrict": true,
  "engines": {
    "node": ">20"
  },
  "lint-staged": {
    "*.{css,js,jsx,ts,tsx,md,mdx,json,jsonc}": "bun biome check --write --unsafe --no-errors-on-unmatched --verbose --files-ignore-unknown 'true"
  },
  "name": "lomhor",
  "packageManager": "bun@1.1.43",
  "private": true,
  "scripts": {
    "b": "bun --filter '@backend/*'",
    "b:admin": "bun --filter '@backend/admin'",
    "b:admin:build": "bun turbo run build --filter '@backend/admin'",
    "b:admin:dev": "bun turbo run dev --filter '@backend/admin'",
    "b:admin:lint": "bun turbo run lint --filter '@backend/admin'",
    "b:build": "bun turbo run build --filter '@backend/*'",
    "b:core": "bun turbo run dev --filter '@backend/core'",
    "b:core:build": "bun turbo run build --filter '@backend/core'",
    "b:core:dev": "bun turbo run dev --filter '@backend/core'",
    "b:core:lint": "bun turbo run lint --filter '@backend/core'",
    "b:dev": "bun turbo run dev --filter '@backend/*'",
    "build": "turbo run build",
    "check-types": "bun tsc --noEmit",
    "dev": "turbo run dev",
    "f": "bun --filter '@frontend/*'",
    "f:desktop": "bun --filter '@frontend/desktop'",
    "f:desktop:build": "bun turbo run build --filter '@frontend/desktop'",
    "f:desktop:dev": "bun turbo run dev --filter '@frontend/desktop' -- --turbo",
    "f:desktop:lint": "bun turbo run lint --filter '@frontend/desktop'",
    "f:desktop:start": "bun turbo run start --filter '@frontend/desktop'",
    "f:docs": "bun --filter '@frontend/docs'",
    "f:docs:build": "bun turbo run build --filter '@frontend/docs'",
    "f:docs:dev": "bun turbo run dev --filter '@frontend/docs' -- --turbo",
    "f:docs:lint": "bun turbo run lint --filter '@frontend/docs'",
    "f:docs:start": "bun turbo run start --filter '@frontend/docs'",
    "f:mobile": "bun --filter '@frontend/mobile'",
    "f:mobile:build": "bun turbo run build --filter '@frontend/mobile'",
    "f:mobile:dev": "bun turbo run dev --filter '@frontend/mobile' -- --turbo",
    "f:mobile:lint": "bun turbo run lint --filter '@frontend/mobile' -- --turbo",
    "f:mobile:start": "bun turbo run start --filter '@frontend/mobile'",
    "f:web": "bun --filter '@frontend/web'",
    "f:web:build": "bun turbo run build --filter '@frontend/web'",
    "f:web:dev": "bun turbo run dev --filter '@frontend/web' -- --turbo",
    "f:web:start": "bun turbo run start --filter '@frontend/web'",
    "format": "bun biome format --write --files-ignore-unknown=true",
    "lint": "turbo run lint",
    "nuke:node_modules": "bunx rimraf **/node_modules",
    "p": "bun --filter '@packages/*'",
    "p:core": "bun --filter '@packages/core'",
    "p:custom": "bun --filter '@packages/custom'",
    "p:extension": "bun --filter '@packages/extension'",
    "p:lib": "bun --filter '@packages/lib'",
    "p:magic": "bun --filter '@packages/magic'",
    "p:plate": "bun --filter '@packages/plate'",
    "p:shadcn": "bun --filter '@packages/shadcn'"
  },
  "trustedDependencies": ["@biomejs/biome", "@nestjs/core", "@parcel/watcher"],
  "workspaces": ["packages/*", "frontend/*", "backend/*", "configs/*"]
}
