{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["./*"]
    },
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ],
    "strict": true,
    "strictNullChecks": true
  },

  "extends": "@configs/typescript/base.json"
}
